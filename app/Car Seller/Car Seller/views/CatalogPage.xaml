<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Car_Seller.views.CatalogPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ia="clr-namespace:IntelliAbb.Xamarin.Controls;assembly=IntelliAbb.Xamarin.Controls"
    Title="Поиск">
    <StackLayout>
        <CollectionView
            x:Name="RootCollectionView"
            HorizontalScrollBarVisibility="Never"
            ItemsSource="{Binding cars}"
            VerticalScrollBarVisibility="Never">
            <CollectionView.Header>
                <StackLayout
                    Padding="20"
                    HeightRequest="70"
                    HorizontalOptions="Fill">
                    <Frame
                        Padding="10"
                        BackgroundColor="{StaticResource AppBackgroundColor}"
                        CornerRadius="15"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand">
                        <StackLayout
                            HorizontalOptions="FillAndExpand"
                            Orientation="Horizontal"
                            VerticalOptions="Center">
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnFiltersClicked" />
                            </StackLayout.GestureRecognizers>
                            <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand">
                                <Image
                                    Margin="0,0,5,0"
                                    HeightRequest="20"
                                    Source="car.png" />
                            </StackLayout>
                            <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                                <Label
                                    FontAttributes="None"
                                    FontSize="19"
                                    Text="Настроить фильтры"
                                    TextDecorations="None" />
                            </StackLayout>
                            <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand">
                                <Image HeightRequest="40" Source="filters.png" />
                            </StackLayout>
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <RelativeLayout Padding="20" ClassId="{Binding car.Id}">
                        <RelativeLayout.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnCarClicked" />
                        </RelativeLayout.GestureRecognizers>
                        <Frame
                            Padding="0,10,0,5"
                            BackgroundColor="{StaticResource AppBackgroundColor}"
                            CornerRadius="30"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="CenterAndExpand">
                            <StackLayout>

                                <CollectionView
                                    HeightRequest="200"
                                    HorizontalScrollBarVisibility="Always"
                                    ItemsSource="{Binding car.Photos}"
                                    VerticalScrollBarVisibility="Never">
                                    <CollectionView.ItemsLayout>
                                        <LinearItemsLayout Orientation="Horizontal" />
                                    </CollectionView.ItemsLayout>
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand">
                                                <Image
                                                    Aspect="Fill"
                                                    HorizontalOptions="FillAndExpand"
                                                    VerticalOptions="FillAndExpand">
                                                    <Image.Source>
                                                        <UriImageSource Uri="{Binding .}" />
                                                    </Image.Source>
                                                </Image>
                                            </StackLayout>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                                <StackLayout Padding="10">

                                    <Frame
                                        Padding="4,0,4,0"
                                        BackgroundColor="{StaticResource SecondaryColor}"
                                        CornerRadius="10"
                                        HorizontalOptions="StartAndExpand">
                                        <StackLayout Orientation="Horizontal">
                                            <Label
                                                Padding="0"
                                                FontSize="35"
                                                Text="{Binding car.Cost}"
                                                TextColor="White" />
                                            <Label
                                                Padding="0"
                                                FontSize="35"
                                                Text="₽"
                                                TextColor="White" />
                                        </StackLayout>
                                    </Frame>
                                    <StackLayout Orientation="Horizontal">
                                        <StackLayout Orientation="Horizontal">
                                            <Label
                                                FontSize="13"
                                                Text="{Binding car.Mileage}"
                                                TextColor="Gray" />
                                            <Label
                                                Margin="-4,0,0,0"
                                                FontSize="13"
                                                Text="км"
                                                TextColor="Gray" />
                                            <Label
                                                FontSize="13"
                                                Text="|"
                                                TextColor="Gray" />
                                        </StackLayout>
                                        <StackLayout Orientation="Horizontal">
                                            <Label
                                                FontSize="13"
                                                Text="{Binding car.Volume}"
                                                TextColor="Gray" />
                                            <Label
                                                Margin="-4,0,0,0"
                                                FontSize="13"
                                                Text="л.с"
                                                TextColor="Gray" />
                                            <Label
                                                FontSize="13"
                                                Text="|"
                                                TextColor="Gray" />
                                        </StackLayout>
                                        <StackLayout Orientation="Horizontal">
                                            <Label
                                                FontSize="13"
                                                Text="{Binding car.Engine}"
                                                TextColor="Gray" />
                                            <Label
                                                FontSize="13"
                                                Text="|"
                                                TextColor="Gray" />
                                        </StackLayout>
                                        <StackLayout Orientation="Horizontal">
                                            <Label
                                                FontSize="13"
                                                Text="{Binding car.Transmission}"
                                                TextColor="Gray" />
                                            <Label
                                                FontSize="13"
                                                Text="|"
                                                TextColor="Gray" />
                                        </StackLayout>
                                    </StackLayout>
                                    <StackLayout Orientation="Horizontal">
                                        <StackLayout Orientation="Horizontal">
                                            <Label
                                                FontSize="16"
                                                Text="{Binding car.Brand}"
                                                TextColor="Black" />
                                        </StackLayout>
                                        <StackLayout Orientation="Horizontal">
                                            <Label
                                                FontSize="16"
                                                Text="{Binding car.Model}"
                                                TextColor="Black" />
                                            <Label
                                                Margin="-5,0,0,0"
                                                FontSize="16"
                                                Text=", "
                                                TextColor="Black" />
                                        </StackLayout>
                                        <StackLayout Orientation="Horizontal">
                                            <Label
                                                FontSize="16"
                                                Text="{Binding car.ReleaseYear}"
                                                TextColor="Black" />
                                            <Label
                                                Margin="-4,0,0,0"
                                                FontSize="16"
                                                Text="год"
                                                TextColor="Black" />
                                        </StackLayout>
                                    </StackLayout>
                                </StackLayout>
                                <StackLayout Margin="10,0,0,0" HorizontalOptions="StartAndExpand">
                                    <Button
                                        Margin="0,0,0,10"
                                        Padding="15,10,15,10"
                                        BackgroundColor="{StaticResource SecondaryColor}"
                                        ClassId="{Binding car.Id}"
                                        Clicked="ResponseClicked"
                                        CornerRadius="20"
                                        FontSize="20"
                                        Text="Откликнуться"
                                        TextColor="{StaticResource AppBackgroundColor}"
                                        VerticalOptions="End" />
                                </StackLayout>
                            </StackLayout>

                        </Frame>
                        <ContentView
                            HeightRequest="30"
                            HorizontalOptions="EndAndExpand"
                            RelativeLayout.XConstraint="{ConstraintExpression Type=Constant,
                                                                              Constant=10}"
                            RelativeLayout.YConstraint="{ConstraintExpression Type=Constant,
                                                                              Constant=10}"
                            WidthRequest="30">
                            <StackLayout>
                                <Label IsVisible="false" Text="{Binding car.Id}" />
                                <ia:Checkbox
                                    CheckColor="White"
                                    ClassId="{Binding car.Id}"
                                    FillColor="HotPink"
                                    IsChecked="{Binding IsLiked}"
                                    IsCheckedChanged="IsLikedChanged"
                                    OutlineColor="HotPink"
                                    Shape="Rectangle" />
                            </StackLayout>
                        </ContentView>

                    </RelativeLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            <CollectionView.Footer>
                <StackLayout
                    Padding="20,0,20,0"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="CenterAndExpand">
                    <Label
                        x:Name="PageLabel"
                        HorizontalOptions="CenterAndExpand"
                        Text="Страница: 1" />
                    <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal">
                        <Button
                            Margin="0,0,0,10"
                            Padding="15,10,15,10"
                            BackgroundColor="{StaticResource SecondaryColor}"
                            ClassId="{Binding car.Id}"
                            Clicked="PreviousClicked"
                            CornerRadius="20"
                            FontSize="18"
                            HorizontalOptions="StartAndExpand"
                            Text="Предыдущая"
                            TextColor="{StaticResource AppBackgroundColor}"
                            VerticalOptions="End" />
                        <Button
                            Margin="0,0,0,10"
                            Padding="15,10,15,10"
                            BackgroundColor="{StaticResource SecondaryColor}"
                            ClassId="{Binding car.Id}"
                            Clicked="NextClicked"
                            CornerRadius="20"
                            FontSize="18"
                            HorizontalOptions="EndAndExpand"
                            Text="Следующая"
                            TextColor="{StaticResource AppBackgroundColor}"
                            VerticalOptions="End" />
                    </StackLayout>
                    <StackLayout HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                        <Button
                            Margin="0,0,0,10"
                            Padding="15,10,15,10"
                            BackgroundColor="{StaticResource SecondaryColor}"
                            ClassId="{Binding car.Id}"
                            Clicked="GoToFirstClicked"
                            CornerRadius="20"
                            FontSize="18"
                            Text="На первую"
                            TextColor="{StaticResource AppBackgroundColor}"
                            VerticalOptions="End" />
                    </StackLayout>
                </StackLayout>
            </CollectionView.Footer>
        </CollectionView>
    </StackLayout>


</ContentPage>
